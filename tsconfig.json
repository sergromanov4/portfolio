{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "downlevelIteration": true ,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/modules.d.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "include": [
    "src/index.tsx"
  ]
}